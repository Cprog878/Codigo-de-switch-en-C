#include<stdio.h>

int main(){
	
	int x;
	
	printf("introduce un numero del 1 al cuatro: ");
	scanf("%i",&x);//escanear la valeable
	
	switch(x){
                //caso1:en caso de que se introdusca 1 y ssusesivamente
		case 1:printf("lunes");break;
		case 2:printf("martes");break;
		case 3:printf("miercoles");break;
		case 4:printf("viernes");break;
		default:printf("chistosito");
	}
	
	return 0;
}
